{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "redis:6379"
  },
  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "sa",
    "Password": "SuperSecureWith100%Chance",
    "QueueName": "notifications-queue",
    "Durable": true,
    "AutoDelete": false,
    "Exclusive": false,
    "PrefetchCount": 10
  },
  "Resilience": {
    "RabbitMQ": {
      "DurationOfBreak": "00:00:30",
      "SamplingDuration": 60,
      "MinimumThroughput": 10,
      "FailureRatio": 0.5,
      "MaxRetryAttempts": 3,
      "BaseDelay": "00:00:01",
      "MaxDelay": "00:00:30",
      "Timeout": "00:00:30"
    },
    "Redis": {
      "DurationOfBreak": "00:00:30",
      "SamplingDuration": 60,
      "MinimumThroughput": 10,
      "FailureRatio": 0.5,
      "MaxRetryAttempts": 3,
      "BaseDelay": "00:00:01",
      "MaxDelay": "00:00:30",
      "Timeout": "00:00:10"
    }
  },
  "RabbitMQConnectionPool": {
    "MaxConnections": 2,
    "MaxChannelsPerConnection": 5,
    "ConnectionTimeout": "00:00:30",
    "ChannelTimeout": "00:00:10",
    "HealthCheckInterval": "00:02:00",
    "MaxRetryAttempts": 3,
    "EnableHealthChecks": true,
    "ConnectionIdleTimeout": "00:10:00"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Debug", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "Debug" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}